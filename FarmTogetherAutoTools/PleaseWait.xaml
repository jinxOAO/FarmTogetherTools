<Window x:Class="FarmTogetherAutoTools.PleaseWait"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmTogetherAutoTools"
        mc:Ignorable="d"
        Title="PleaseWait" Height="180" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Canvas>
        <ProgressBar HorizontalAlignment="Left" Height="16" VerticalAlignment="Top" Width="200" Canvas.Left="50" Canvas.Top="80" IsIndeterminate="True"/>
        <TextBlock Canvas.Left="70" TextWrapping="Wrap" Text="正在加载，请稍等" Canvas.Top="40" FontSize="15" Width="150" TextAlignment="Center"/>

    </Canvas>
</Window>
